<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lgy.lingua.dao.UserDao">
	
	<select id="login" parameterType="hashmap" resultType="com.lgy.lingua.dto.UserDto">
		select * from user where email=#{email}
	</select>
	
	<insert id="register" parameterType="hashmap">
		insert into user values(#{email}, #{nickname}, #{password}, #{imgPath}, default, #{korean}, #{english}, #{japanese}, #{polish})
	</insert>
	
  	<update id="update" parameterType="hashmap">
		UPDATE user SET nickname=#{nickname}, password=#{password}, imgPath=#{imgPath},
						korean=#{korean}, english=#{english}, japanese=#{japanese}, polish=#{polish} where email = #{email}
	</update>
	
  	<update id="updateTemPwd" parameterType="hashmap">
		UPDATE user SET password=#{password} where email = #{email}
	</update>
	
  	<delete id="delete" parameterType="hashmap">
  		DELETE FROM user WHERE email=#{email}
  	</delete>
  	
</mapper>
